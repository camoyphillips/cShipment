@model cShipment.Models.Dtos.DriverDto

@{
    ViewData["Title"] = "Driver Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Driver ID</dt>
        <dd class="col-sm-10">@Model.DriverId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">License Number</dt>
        <dd class="col-sm-10">@Model.LicenseNumber</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.DriverId">Edit</a> |
<a asp-action="ConfirmDelete" asp-route-id="@Model.DriverId">Delete</a> |
<a asp-action="List">Back to List</a>
