@model cShipment.Models.Dtos.DriverDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this driver?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">License Number</dt>
    <dd class="col-sm-10">@Model.LicenseNumber</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DriverId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
