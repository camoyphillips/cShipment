<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cShipment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cShipment.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">cShipment</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="api/Trucks/List">Trucks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="api/Drivers/List">Drivers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="api/Shipments/List">Shipments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="api/Customer/List">Customers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/swagger">API</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mt-3">
            <div class="row g-3">
                <div class="col-md-6">
                    <form method="get" action="api/Shipments/Search">
                        <div class="input-group">
                            <input type="text" class="form-control" name="query" placeholder="Search Shipments (Origin, Destination, Status)">
                            <input type="date" class="form-control" name="date" placeholder="Filter by Date (optional)">
                            <button class="btn btn-outline-primary" type="submit">Search Shipments</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6">
                    <form method="get" action="api/Drivers/Search">
                        <div class="input-group">
                            <input type="text" class="form-control" name="query" placeholder="Search Drivers (Name, License)">
                            <button class="btn btn-outline-secondary" type="submit">Search Drivers</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="container">
            <main role="main" class="pb-3 mt-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - cShipment -  <a asp-controller="Home" asp-action="Privacy">Privacy</a>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>