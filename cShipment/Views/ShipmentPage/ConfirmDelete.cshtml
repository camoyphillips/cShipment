@model cShipment.Models.Dtos.ShipmentDto

@{
    ViewData["Title"] = "Delete Shipment";
}

<h1>Confirm Delete</h1>

<p class="text-danger">Are you sure you want to delete this shipment?</p>

<dl class="row">
    <dt class="col-sm-3">Origin</dt>
    <dd class="col-sm-9">@Model.Origin</dd>

    <dt class="col-sm-3">Destination</dt>
    <dd class="col-sm-9">@Model.Destination</dd>

    <dt class="col-sm-3">Truck</dt>
    <dd class="col-sm-9">@Model.TruckModel</dd>
</dl>

<form method="post" asp-action="Delete" asp-controller="ShipmentPage">
    <input type="hidden" asp-for="ShipmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/ShipmentPage/List" class="btn btn-secondary">Cancel</a>
</form>
