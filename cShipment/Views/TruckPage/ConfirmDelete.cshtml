@model cShipment.Models.Dtos.TruckDto

@{
    ViewData["Title"] = "Confirm Delete Truck";
}

<h1 class="text-danger">Confirm Deletion</h1>
<p class="lead">Are you sure you want to delete this truck?</p>

<hr />

<div class="row">
    <div class="col-md-6">
        <h2 class="mb-3">Truck Details</h2>

        <div class="mb-3">
            <label class="form-label"><strong>Truck Model:</strong></label>
            <p class="form-control-static">@Model.Model</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Mileage:</strong></label>
            <p class="form-control-static">@Model.Mileage km</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Last Maintenance Date:</strong></label>
            <p class="form-control-static">@Model.LastMaintenanceDate.ToShortDateString()</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Assigned Driver:</strong></label>
            <p class="form-control-static">@(Model.AssignedDriverName ?? "None assigned")</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Image:</strong></label><br />
            @if (Model.HasTruckImage)
            {
                <img asp-src="@Model.TruckImagePath"
                     alt="Truck Image"
                     class="img-fluid rounded border mt-2"
                     style="max-width: 200px; height: auto;"
                     asp-append-version="true" />
            }
            else
            {
                <div class="text-muted mt-2">No truck image available.</div>
            }
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete" asp-route-id="@Model.TruckId" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.TruckId" class="btn btn-secondary">Cancel</a>
    </form>
</div>